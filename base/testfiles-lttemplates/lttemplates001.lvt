%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\TEST{Making~object~types}{
  \NewTemplateType { test } 0
  \NewTemplateType { test } 1
  \NewTemplateType { test } 2
}
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\TEST{Template~interfaces:~correct}{
  \NewTemplateInterface { test-zero }  { template } 0 {
    key-one   : tokenlist = default ,
    key-two   : tokenlist           ,
    key-three : integer   = 4       ,
    key-four  : choice { one, two, three }
  }
  \ShowTemplateInterface { test-zero }  { template }
  \ShowTemplateDefaults { test-zero }  { template }
}
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\TEST{Template~interfaces:~mismatches}{
  \NewTemplateInterface { test-zero }  { template } 1 { }
  \NewTemplateInterface { test-one }   { template } 2 { }
  \NewTemplateInterface { test-two }   { template } 0 { }
  \NewTemplateInterface { undeclared } { template } 1 { }
}
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\ExplSyntaxOff
\TEST{Template~interfaces: spaces}{
  \NewTemplateInterface{test-three}{template} 3 {
    key-one   : tokenlist = default ,
    key-two   : tokenlist           ,
    key-three : integer   = 4       ,
    key-four  : choice { one, two, three }
  }
  \ShowTemplateInterface{test-three}{template}
  \ShowTemplateDefaults{test-three}{template}
}
