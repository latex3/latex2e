\usepackage{lipsum}

\let\ifinnersaved\ifinner

\newcommand\maketopfig[1]{%
     \begingroup
     \let\ifinner\iffalse
     \begin{figure}[!t]
     \let\ifinner\ifinnersaved
     X-#1\caption{}\end{figure}%
     \endgroup
}

\newcommand\makebotfig[1]{%
     \begingroup
     \let\ifinner\iffalse
     \begin{figure}[!b]
     \let\ifinner\ifinnersaved
     X-#1\caption{}\end{figure}%
     \endgroup
}


\AddToHook{shipout/after}{%
  \ifcase \ReadonlyShipoutCounter
  \or  % p=2
  \maketopfig{A}%
  \maketopfig{B}%
  \makebotfig{C}%
  \or  % p=3
  \or  % p=4
  \maketopfig{D}%
  \makebotfig{E}%
  \fi
  }


