\input{regression-test}
\documentclass{article}
\usepackage{iftex}
\ifluatex
\usepackage[TU]{fontenc}
\fi
\ExplSyntaxOn\makeatletter
\fnote_class_new:nn{tnote}{}
\tagpdfsetup{attach-css=false}
\NewDocumentCommand\tmark{m}
 {
  \leavevmode
  \tag_mc_end_push:
  \int_incr:N\g__fnote_id_int
  \tag_struct_begin:n { tag=footnotemark }
  %expansion of the mark not handled
  \fnote_mark_gput:nn {#1}{tnote}
  \tag_mc_begin:n{}
  \hyper@linkstart
     { link }
     { tnote*.\int_use:N\g__fnote_id_int }
  \textsuperscript{#1}
  \hyper@linkend
  \tag_mc_end:
  \tag_struct_end:
  \tag_mc_begin_pop:n{}
 }


\NewDocumentCommand\tnote{m+m}
 {
  \par
  \tag_struct_begin:n { tag=footnote }
  %expansion of the mark not handled!
  \fnote_mark_gpop_all:nnN {#1}{tnote}\l_tmpa_seq
  % internal command needs an interface or fnote_gput_refs:ee should change
  \seq_map_inline:Nn \l_tmpa_seq
   {
     \fnote_gput_refs:ee {\__fnote_get_struct_num:w ##1}{\tag_get:n{struct_num}}
   }
   %start paragraph
  \leavevmode
  \tag_mc_end_push: %stop P-mc
  \tag_struct_begin:n { tag=footnotelabel }
  \tag_mc_begin:n{}
  %create targets
  \seq_map_inline:Nn \l_tmpa_seq
   { \MakeLinkTarget*{tnote*.\__fnote_get_id:w ##1} }
  \textsuperscript{#1}
  \tag_mc_end:
  \tag_struct_end:
  \tag_mc_begin_pop:n{} %restart paragraph
  #2\par
  \tag_struct_end: %stop FENote
 }

\ExplSyntaxOff\makeatother

\usepackage{hyperref}
\begin{document}



\tmark{1}

text before\tmark{1}

text before\tmark{2} and some text after

\tnote{1}{Text of first note}

\tnote{2}{Text with a paragraph \par and more text}

