%    unnecessary extra time).
%    \begin{macrocode}
  \@kernel@eqno
  \cs_set_eq:NN \@@_prepare_display_end: \prg_do_nothing:
  \aftergroup\ignorespaces
}
%    \end{macrocode}
%    Same game for \cs{leqno}.
