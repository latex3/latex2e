%    \end{macrocode}
% store the key (the structure number) in the seq
%    \begin{macrocode}
            \seq_put_right:Nn #3 { ##1 }
%    \end{macrocode}
% remove entry as used from the global prop
%    \begin{macrocode}
            \prop_gremove:cn { g_@@_currentmarks_ #2 _prop } {##1}
          }
      }
